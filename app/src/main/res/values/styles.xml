<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- NoActionBar , Full Screen(NoTitleBar) -->
    <style name="NoActionBarAndTitleBar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <!-- intro -->
    <style name="IntroNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:windowBackground">@drawable/intro</item>-->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Tool Bar -->
    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>

        <!--<item name="android:windowActionBarOverlay">true</item>-->
        <!--<item name="windowActionBarOverlay">true</item>-->
    </style>


    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <!-- Customize your theme here. -->
        <!-- Toolbar의 타이틀 색 -->
        <item name="android:textColorPrimary">#ffffff</item>
        <!-- Toolbar의 옵션 메뉴의 Overflow 아이콘 색 -->
        <item name="android:textColorSecondary">#ffffff</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowBackground">@null</item>

        <!-- SearchView 등의 테마 -->
        <item name="android:actionBarWidgetTheme">@style/actionBarWidgetTheme</item>
    </style>
    <style name="actionBarWidgetTheme">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textColorHint">#f5f5f5</item>
    </style>



    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
